{
    "name": "raiffeisen-ecom/payment-sdk",
    "type": "library",
    "version": "0.0.1",
    "description": "Ecommerce payment API SDK",
    "license": "MIT",
    "homepage": "https://github.com/Raiffeisen-DGTL/ecom-sdk-php",
    "support": {
        "issues": "https://github.com/Raiffeisen-DGTL/ecom-sdk-php/issues"
    },
    "require": {
        "php": ">=5.6.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpdocumentor/phpdocumentor": "2.8.*",
        "phpunit/phpunit": "5.7.27",
		"squizlabs/php_codesniffer" : "3.5.*",
        "php-mock/php-mock-phpunit": "^1.1"
    },
	"autoload": {
        "psr-4": {
            "Raiffeisen\\Ecom\\": "src/"
        }
	},
	"autoload-dev": {
		"psr-4": {
            "Raiffeisen\\Ecom\\": "tests/"
        }
	},
    "scripts": {
        "code": "phpcs --encoding=utf-8 -s",
        "test": "phpunit",
        "docs": "phpdoc",
        "wiki": "phpdocmd docs/structure.xml wiki"
    },
    "config": {
        "platform": {
            "php": "5.6.0"
        }
    }
}
